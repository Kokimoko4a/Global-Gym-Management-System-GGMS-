@using GGMS.Web.ViewModels.GymOwner;
@model GymFormModel;

@{
    ViewData["Title"] = "Create Gym";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4" style="font-size: 2rem;">Create a New Gym</h2>

            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label" style="font-size: 1.5rem;"></label>
                    <input asp-for="Name" class="form-control bg-dark text-white" style="font-size: 1.25rem;" placeholder="Enter the gym's name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label" style="font-size: 1.5rem;"></label>
                    <input asp-for="Address" class="form-control bg-dark text-white" style="font-size: 1.25rem;" placeholder="Enter the gym's address" />
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100" style="font-size: 1.5rem;">Create Gym</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary" style="font-size: 1.25rem;">Back to List</a>
            </div>
        </div>
    </div>
</div>
