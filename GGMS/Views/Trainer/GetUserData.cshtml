@using GGMS.Data.Models;
@model ApplicationUser;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Details - GGMS</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GGMS.styles.css" asp-append-version="true" />
    <style>
        .details-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: #333;
            color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .details-container h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .details-container .detail {
            margin-bottom: 10px;
        }

        .details-container .detail label {
            display: inline-block;
            width: 150px;
            font-weight: bold;
        }

        .details-container .detail span {
            color: #ddd;
        }

        .button-group {
            text-align: center;
            margin-top: 20px;
        }

        .button-group button {
            background-color: #444;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            text-transform: uppercase;
            font-size: 0.8em;
            margin: 0 10px;
        }

        .button-group button:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <div class="details-container">
        <h1>User Details</h1>
        <div class="detail">
            <label>First Name:</label>
            <span>@Model.FirstName</span>
        </div>
        <div class="detail">
            <label>Last Name:</label>
            <span>@Model.LastName</span>
        </div>
        <div class="detail">
            <label>Email:</label>
            <span>@Model.Email</span>
        </div>
        <div class="detail">
            <label>Phone Number:</label>
            <span>@Model.TelephoneNumber</span>
        </div>
        <div class="detail">
            <label>Age:</label>
            <span>@Model.Age</span>
        </div>
        <div class="detail">
            <label>Address:</label>
            <span>@Model.Address</span>
        </div>
        <div class="button-group">
            <button onclick="location.href='@Url.Action("Edit", new { id = Model.Id })'">Edit</button>
            <button onclick="location.href='@Url.Action("Index")'">Back to List</button>
        </div>
    </div>
</body>
</html>
